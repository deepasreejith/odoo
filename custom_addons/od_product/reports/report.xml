<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="print_course">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="row" id="header">
                        <div class="col-12">
                            <br/>
                            <h2>Course-
                                <span t-field="doc.name"/>
                            </h2>
                            <h2>Responsible:-
                                <span t-field="doc.responsible_id"/>
                            </h2>
                            <br/>
                            <table class="table table-bordered" style="table-layout: fixed">
                                <thead style="display: table-row-group">
                                    <tr>
                                        <th class="text-center" style="width: 25%" scope="col">Name</th>
                                        <th class="text-center" style="width: 25%" scope="col">Start Date</th>
                                        <th class="text-center" style="width: 25%" scope="col">Instructor</th>
                                        <th class="text-center" style="width: 25%" scope="col">Duration</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.session_ids" t-as="session">
                                        <td>
                                            <span t-field="session.name"/>
                                        </td>
                                        <td>
                                            <span t-field="session.start_date"/>
                                        </td>
                                        <td>
                                            <span t-field="session.instructor_id"/>
                                        </td>
                                        <td>
                                            <span t-field="session.duration"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <record id="course_print" model="ir.actions.report">
        <field name="name">Print Course</field>
        <field name="model">od_product.course</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">od_product.print_course</field>
        <field name="report_file">od_product.print_course</field>
        <field name="print_report_name">'Course - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="model_od_product_course"/>
        <field name="binding_type">report</field>
    </record>

</odoo>