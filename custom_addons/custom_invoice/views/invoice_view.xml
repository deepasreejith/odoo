<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_invoice_form_custom" model="ir.ui.view">
            <field name="name">account.move.form.inherit.custom</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">

                    <field name="manager_remarks"
                            placeholder="Enter manager remarks..."
                            readonly="manager_remarks_readonly"/>
                    <field name="director_remarks"
                            placeholder="Enter director remarks..."
                           readonly="director_remarks_readonly"/>

                    <field name="manager_remarks_readonly" invisible="1"/>
                    <field name="director_remarks_readonly" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
