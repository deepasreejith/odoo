        <record id="student_form_view_extend" model="ir.ui.view">
        <field name="name">student.form.view.extend</field>
        <field name="model">student.profile</field>
        <field name="inherit_id" ref="school.student_form_view"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//form//sheet//page[1]//group[1]//group[2]//field[@name='image']" position="after">-->
<!--                <field name="write_uid"/>-->
<!--                <field name="write_date"/>-->
<!--            </xpath>     both xpath also working-->
             <xpath expr="//field[@name='image']" position="after">
                <field name="write_uid"/>

            </xpath>
            <xpath expr="//notebook" position="inside">
                 <page name="Student Details">
                     <group>
                           <field name="write_date"/>
                     </group>
                 </page>
            </xpath>

            <field name="name" position="attributes">
                 <attribute name="required">1</attribute>
            </field>

            <xpath expr="//field[@name='roll_no']" position="attributes">
                <attribute name="required">0</attribute>
            </xpath>
        </field>
    </record>
