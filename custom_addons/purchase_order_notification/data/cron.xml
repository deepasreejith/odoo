<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="check_purchase_order_notification" model="ir.cron">
        <field name="name">Check Purchase Order Notifications</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="state">code</field>
        <field name="code">model.check_notification()</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(datetime.utcnow() + timedelta(days=0)).strftime('%Y-%m-%d 12:01:00')" />
    </record>

</odoo>
