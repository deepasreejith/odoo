<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_operation_tree" model="ir.ui.view">
        <field name="name">operation.tree</field>
        <field name="model">hospital.operation</field>
        <field name="arch" type="xml">
            <tree sample="1">
                 <field name="operation_name"/>
                <field name="doctor_id"/>

            </tree>
        </field>
    </record>

    <record id="view_operation_form" model="ir.ui.view">
        <field name="name">operation.form</field>
        <field name="model">hospital.operation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="operation_name"/>
                            <field name="doctor_id"/>
                            <field name="reference_record"/>
                        </group>

                    </group>

                </sheet>

            </form>
        </field>
    </record>


    <record id="action_operation" model="ir.actions.act_window">
        <field name="name">Operation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.operation</field>
        <field name="view_mode">tree,form,search</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create first operation
            </p>
        </field>
    </record>

    <menuitem id="menu_operation"
              name="Operation"
              parent="menu_configuration"
              action="action_operation"
              sequence="0"/>
</odoo>