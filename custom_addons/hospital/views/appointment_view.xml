<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_appointment_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointments">
                    <field name="patient_id"/>
                    <templates>
                        <div t-name="activity-box">
                            <img class="rounded" t-att-src="activity_image('hospital.appointment', 'image', record.patient_id.raw_value)" role="img" t-att-title="record.patient_id.value" t-att-alt="record.patient_id.value"/>
                            <div class="ms-2">
                                <field name="ref" display="full" class="o_text_block"/>
                            </div>
                        </div>
                    </templates>
                </activity>
        </field>
    </record>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'" sample="1" multi_edit="1" export_xlsx="0">
                <header>
                     <button name="action_in_consultation" string="In Consultation" type="object"/>
                </header>
                <field name="patient_id"/>
                <field name="appointment_time"/>
                <field name="ref" optional="show"/>
                <field name="gender" optional="hide"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="booking_date" optional="show"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state" widget="badge" decoration-success="state == 'done'"
                       decoration-warning="state == 'in_consultation'" decoration-info="state == 'draft'"
                       decoration-danger="state == 'cancel'"/>
                 <button name="action_done"  class="fa fa-check btn-success"  type="object"  invisible="state != 'in_consultation'"/>
                <button name="%(hospital.action_cancel_appointment)d" class="fa fa-times btn-danger" type="action" invisible="state != 'draft'"
                             context="{'default_reason':'test','hide_appointment':1}"/>
                <groupby name="patient_id">
                    <button name="action_done" class="fa fa-check" type="object" />
                    <button name="edit" type="edit" icon="fa-edit" title="Edit"/>
                </groupby>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--                    options="{'clickable': '1'}"-->
                    <button name="action_in_consultation" string="In Consultation" type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_done" string="Mark as Done" data-hotkey="v" type="object" class="oe_highlight"
                            invisible="state != 'in_consultation'"/>
                    <button name="action_cancel" string="Cancel" data-hotkey="z" type="object" class="oe_highlight"
                            invisible="state == 'done'" context="{'default_reason':'test','hide_appointment':1}"/>
<!--                     <button name="%(hospital.action_cancel_appointment)d" string="Cancel" data-hotkey="z" type="action" class="oe_highlight"-->
<!--                            invisible="state == 'done'" context="{'default_reason':'test','hide_appointment':1}"/>-->
                    <button name="action_draft" string="Reset to Draft" type="object" class="oe_highlight"
                            invisible="state in ['done','in_consultation','draft']"/>
                    <field name="state" widget="statusbar" nolabel="1"
                           statusbar_visible="draft,in_consultation,done,cancel"/>
                </header>
                <sheet>
                    <div>
                        <field name="priority" widget="priority"/>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="ref"/>
                            <field name="gender"/>
                            <field name="doctor_id" widget="many2one_avatar"/>
                            <field name="appointment_time" default_focus='1'/>

                        </group>
                        <group>
                            <field name="hide_sales_price" groups="base.group_no_one"/>
                            <field name="booking_date"/>
                            <button name="object_button" string="O button" type="object" class="oe_highlight" groups="base.group_no_one"/>
                            <button name="%(hospital.action_hospital_patient)d" string="A Button" class="oe_highlight"
                                    type="action" confirm="Are you sure want to open patient action"
                                    help="On clicking this button you will be redirected to patient record" groups="base.group_no_one"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">

                                <field name="prescription" placeholder="Enter your notes"
                                       options="{'collaborative': true,'resizable':true, 'codeview':true}" />

                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <group>
                                <field name="pharmacy_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="price_unit" column_invisible="context.get('parent.hide_sales_price', True)"/>
                                        <field name="qty"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="price_unit" column_invisible="context.get('parent.hide_sales_price', True)" />
                                            <field name="qty"/>
                                        </group>
                                    </form>

                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"
                           options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,search,activity</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create first appointment
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              name="Appointments"
              parent="menu_appointment_master"
              action="action_hospital_appointment"
              sequence="0"/>
</odoo>