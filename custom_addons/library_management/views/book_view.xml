<odoo>
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author_id"/>
                        <field name="isbn"/>
                        <field name="published_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_book_tree" model="ir.ui.view">
        <field name="name">book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="author_id"/>
                <field name="isbn"/>
                <field name="published_date"/>
            </tree>
        </field>
    </record>

    <record id="action_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create first data
            </p>
        </field>
    </record>

    <menuitem id="menu_library_management" name="Library Management" sequence="1"/>
    <menuitem id="menu_library_books" name="Books" parent="menu_library_management" action="action_book"/>


</odoo>
