<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_my_purchase_order" model="ir.actions.report">
        <field name="name">My Purchase Order</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">my_purchase_order.purchase_order_report</field>
        <field name="report_file">my_purchase_order.purchase_order_report</field>
        <field name="print_report_name">
            (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
            'Purchase Order - %s' % (object.name))
        </field>
        <field name="binding_model_id" ref="model_purchase_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
