<!--This is the way to we can make any changes in odoo report via an inheritance.inherit_id="modulename.template_id"
Siilarly, we can change header and footer by customisation via inherit_id="web.external_layout_standard"-->

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@class='row justify-content-end']" position="after">
                <h5>test inherit</h5>
            </xpath>
    </template>

</odoo>