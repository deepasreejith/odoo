<odoo>
    <record id="employee_salary_form_view_tree" model="ir.ui.view">
        <field name="name">employee.salary.form.view.tree</field>
        <field name="model">employee.salary.form</field>
        <field name="arch" type="xml">
            <tree string="Employee salary Form">
                <field name="name" />
                <field name="employee_id" />
                <field name="requested_date" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="state" decoration-success="state == 'submitted'" widget="badge" />
            </tree>
        </field>
    </record>

    <record id="employee_salary_form_view_form" model="ir.ui.view">
        <field name="name">employee.salary.form.view.form</field>
        <field name="model">employee.salary.form</field>
        <field name="arch" type="xml">
            <form string="Employee salary Form">
                <header>
                    <button name="action_confirm" data-hotkey="q" string="Submit" type="object"
                        class="oe_highlight" invisible="state != 'draft'" />
                    <button name="action_approve" string="Approve" type="object"
                        class="oe_highlight"
                        invisible="state != 'submitted' or user_id != uid" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Employee salary" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" invisible="1" />
                            <field name="employee_id" readonly="state != 'draft'" />
                            <field name="signature" widget="signature" />
                            <field name="bank_name" readonly="state != 'draft'" />
                            <field name="iban" readonly="state != 'draft'" />
                        </group>
                        <group>
                            <field name="requested_date" readonly="state != 'draft'" />
                            <field name="date_from" readonly="state != 'draft'" />
                            <field name="date_to" readonly="state != 'draft'" />
                            <field name="create_uid" />
                            <field name="company_id" readonly="state != 'draft'"
                                groups="base.group_multi_company" />
                        </group>
                    </group>
                    <group>
                        <field name="note" readonly="state != 'draft'" />
                    </group>
                    <notebook>
                        <page name="salary_details" string="Salary Details">
                            <field name="line_ids" nolabel="1" readonly="state != 'draft'">
                                <tree editable="bottom">
                                    <field name="form_id" column_invisible="1" />
                                    <field name="name" />
                                    <field name="amount" sum="Total" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                    <field name="activity_ids" widget="mail_activity" />
                </div>
            </form>
        </field>
    </record>

    <record id="employee_salary_form_action" model="ir.actions.act_window">
        <field name="name">Employee Salary Form</field>
        <field name="res_model">employee.salary.form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="employee_salary_form_menu"
        name="Employee Salary Form"
        parent="hr.menu_hr_root"
        action="employee_salary_form_action"
        sequence="40" />
</odoo>
