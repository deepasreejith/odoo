<odoo>
    <record id="employee_request_form_view_tree" model="ir.ui.view">
        <field name="name">employee.request.form.view.tree</field>
        <field name="model">employee.request.form</field>
        <field name="arch" type="xml">
            <tree string="Request Form">
                <field name="name" />
                <field name="requested_date" />
                <field name="purpose" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="state" decoration-danger="state == 'rejected'"
                    decoration-success="state == 'submitted'" widget="badge" />
            </tree>
        </field>
    </record>

    <record id="employee_request_form_view_form" model="ir.ui.view">
        <field name="name">employee.request.form.view.form</field>
        <field name="model">employee.request.form</field>
        <field name="arch" type="xml">
            <form string="Request Form">
                <header>
                    <button name="action_confirm" data-hotkey="q" string="Submit" type="object"
                        class="oe_highlight" invisible="state != 'draft'" />
                    <button name="action_approve" data-hotkey="q" string="Approve" type="object"
                        class="oe_highlight" invisible="state != 'submitted' or user_id != uid" />
                    <button name="action_reject" data-hotkey="q" string="Reject" type="object"
                        class="oe_highlight" invisible="state != 'submitted'" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g. Request" />
                            </h1>
                        </div>
                        <group>
                            <field name="request_type_id" readonly="state != 'draft'" />
                            <field name="purpose" readonly="state != 'draft'" />
                            <field name="signature" widget="signature" />
                            <field name="user_id" invisible="1" />
                        </group>
                        <group>
                            <field name="requested_date" readonly="state != 'draft'" />
                            <field name="create_uid" />
                            <field name="attachment" widget="Binary" readonly="state != 'approved'" />
                            <field name="company_id" readonly="state != 'draft'"
                                groups="base.group_multi_company" />
                        </group>
                    </group>
                    <group>
                        <field name="summary" readonly="state != 'draft'" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                    <field name="activity_ids" widget="mail_activity" />
                </div>
            </form>
        </field>
    </record>

    <record id="employee_request_type_view_tree" model="ir.ui.view">
        <field name="name">employee.request.type.view.tree</field>
        <field name="model">employee.request.type</field>
        <field name="arch" type="xml">
            <tree string="Request Type" editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="employee_request_type_action" model="ir.actions.act_window">
        <field name="name">Request Types</field>
        <field name="res_model">employee.request.type</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="employee_request_form_action" model="ir.actions.act_window">
        <field name="name">Request Form</field>
        <field name="res_model">employee.request.form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="employee_request_type_menu"
        name="Request Types"
        parent="hr.menu_config_employee"
        groups="hy_employee_customisation_bhm.group_employee_request_form"
        action="employee_request_type_action"
        sequence="10" />

    <menuitem
        id="employee_request_form_menu"
        name="request Form"
        parent="hr.menu_hr_root"
        groups="hy_employee_customisation_bhm.group_employee_request_form"
        action="employee_request_form_action"
        sequence="10" />
</odoo>