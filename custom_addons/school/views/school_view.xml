<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="school_list_view" model="ir.ui.view">
        <field name="name">school.list.view</field>
        <field name="model">school.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="school_form_view" model="ir.ui.view">
        <field name="name">school.form.view</field>
        <field name="model">school.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                     <group>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="address"/>
                        <field name="phone"/>
                        <field name="is_virtual_class"/>
                    </group>
                    <group>
                        <field name="open_date"/>
                        <field name="establish_date"/>
                        <field name="result"/>
                         <field name="school_type"/>
                        <field name="auto_rank"/>
                    </group>
                </group>
                    <group>
                        <field name="documents" filename="document_name"/>
                        <field name="document_name" invisible="1" />
                        <field name="school_image" widget="image" />
                        <field name="school_description" />
                    </group>
                    <notebook>
                        <page name="Student">
                            <field name="student_ids" >
                                <tree>
                                     <field name="name"/>
                                    <field name="hobby_id" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_profile" model="ir.actions.act_window">
        <field name="name">School Profile</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.profile</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create first appointment
            </p>
        </field>
    </record>

    <menuitem id="school_root_menu"
              name="School"
              sequence="0"/>
    <menuitem id="school_sub_menu"
              name="School Profile"
              parent="school_root_menu"
              sequence="0"/>

    <menuitem id="school_profile_menu"
              name="School Profile"
              parent="school_sub_menu"
              action="action_school_profile"
              sequence="0"/>
</odoo>