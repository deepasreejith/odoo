<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="student_list_view" model="ir.ui.view">
        <field name="name">student.list.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <tree> <!--   editable="top"-->
                <field name="stud_seq" widget="handle"/>
                <field name="id"/>
                <field name="roll_no"/>
                <field name="name"/>
                <field name="create_date" string="Created On"/>
                <field name="school_id"/>
                <field name="is_virtual_school"/>
                <field name="total_fee" sum="Total Fees"/>
            </tree>
        </field>
    </record>

    <record id="student_form_view" model="ir.ui.view">
        <field name="name">student.form.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="update_student_fee" type="object" string="Student Fee Update"/>
                    <button name="school.student_fee_update_form_view_wizard_action" type="action"
                            string="Student Fee Update Wizard using action"/>
                    <button name="spec_command6" type="object" string="special command 6"/>
                    <field name="state" widget="statusbar" options="{'clickable':1}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="roll_no"/>
                            <field name="stud_seq"/>

                            <!--                           domain="[('is_virtual_class','=',True)]"  options="{'no_create_edit': True,'no_create':True}"-->
                            <field name="currency_id"/>
                            <field name="student_fee"/>
                            <field name="total_fee" widget="monetary"/>
                        </group>
                        <group>
                            <field name="active"/>
                             <field name="create_uid"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Student Details">
                            <group>
                                <group>
                                    <field name="bdate"/>
                                    <field name="hobby_id" widget="many2many_tags"/>
                                </group>
                                <group>
                                     <field name="image" class="oe_avatar" widget="image" />
                                </group>
                            </group>


                        </page>
                        <page name="School Details">
                            <group>
                                <field name="school_id"/>
                                <field name="is_virtual_school"/>
                                <field name="ref_id"/>
                            </group>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="student_kanban_view" model="ir.ui.view">
        <field name="name">student.kanban.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="roll_no"/>
                <field name="id"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img class="o_kanban_image_inner_pic"
                                     t-att-src="kanban_image('student.profile','image',record.id.raw_value)" />
                            </div>
                            <div class="oe_kanban_card">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <ul>
                                    <li>School:
                                        <field name="school_id"/>
                                    </li>
                                    <li>Roll no:
                                        <field name="roll_no"/>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="student_calendar_view" model="ir.ui.view">
        <field name="name">student.calendar.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <calendar date_start="create_date" mode="month">
                <field name="name"/>
            </calendar>
        </field>
    </record>

     <record id="student_graph_view" model="ir.ui.view">
        <field name="name">student.graph.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <graph>
                <field name="school_id"/>
                 <field name="bdate" interval="year"/>
                 <field name="total_fee" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="student_pivot_view" model="ir.ui.view">
        <field name="name">student.pivot.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <pivot>
                 <field name="total_fee" type="measure"/>
                <field name="name" type="row"/>
                 <field name="school_id" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="action_student_profile" model="ir.actions.act_window">
        <field name="name">Student Profile</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.profile</field>
        <field name="view_mode">tree,form,kanban,calendar,graph,pivot</field>
<!--        <field name="context">{'group_by':'state'}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create first student
            </p>
        </field>
    </record>

    <record id="student_hobby_list_view" model="ir.ui.view">
        <field name="name">student.hobby.list.view</field>
        <field name="model">student.hobby</field>
        <field name="arch" type="xml">
            <tree default_order="id desc">
                <field name="id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="student_hobby_form_view" model="ir.ui.view">
        <field name="name">student.hobby.form.view</field>
        <field name="model">student.hobby</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="student_search_view" model="ir.ui.view">
        <field name="name">student.search.view</field>
        <field name="model">student.profile</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="student Name"
                       filter_domain="[ ('name', 'ilike', self)]"/>
                <filter name="filter_is_virtual_school" string="virtual school"
                        domain="[('is_virtual_school','=',True)]"/>
                <filter name="filter_create_date" string="Today's Record"
                        domain="[('create_date','>=',context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_week_record" string="This week Record"
                        domain="[('create_date','>=',(context_today()+datetime.timedelta(-6)).strftime('%Y-%m-%d'))]"/>
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="school type" name="group_by_school_id" context="{'group_by':'school_id'}"/>
                </group>
                <searchpanel>
                    <field name="school_id" icon="fa fa-filter" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_student_hobby" model="ir.actions.act_window">
        <field name="name">Hobby</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.hobby</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create first student hobby
            </p>
        </field>
    </record>


</odoo>